<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<!-- 官方WEB开发指南: http://docs.oracle.com/cd/E21764_01/web.1111/e13712/web_xml.htm#CIHFAIDA -->
	<!-- Optional Currently, this element is not used by WebLogic Server. -->
	<display-name>web</display-name>
	<description>项目描述</description>
	<distributable />
	<!-- The optional context-param element contains the declaration of a Web 
		application's servlet context initialization parameters. -->
	<!-- context-param> <param-name></param-name> <param-value></param-value> 
		</context-param -->
	<!-- filter相关 -->
	<!-- filter -->
	<!-- filter的别名 -->
	<!-- filter-name></filter-name> <filter-class></filter-class> <init-param> 
		<param-name></param-name> <param-value></param-value> </init-param> </filter -->
	<!-- filter映射 -->
	<!-- filter-mapping -->
	<!-- filter-name></filter-name> <url-pattern></url-pattern -->
	<!-- servlet-name,设置当调用该servlet的时候，执行过滤器 -->
	<!-- servlet-name></servlet-name> </filter-mapping -->
	<!-- servlet设置 -->
	<!-- servlet -->
	<!-- servlet-name></servlet-name> <servlet-class></servlet-class -->
	<!-- 设置servlet的启动级别 -->
	<!-- load-on-startup></load-on-startup -->
	<!-- /servlet -->
	<!-- servlet映射 -->
	<!-- servlet-mapping> <servlet-name></servlet-name> <url-pattern></url-pattern> 
		</servlet-mapping -->
	<session-config>
		<!-- session timeout的设置,默认:60 -->
		<session-timeout>60</session-timeout>
	</session-config>
	<!-- 如果是对外的WEB应用，请一定设置错误页面，不要暴露一堆Exception给用户，至少出于安全，你也应该这样做. -->
	<error-page>
		<!-- HTTP 状态码 -->
		<error-code>500</error-code>
		<location>/WEB-INF/500.jsp</location>
	</error-page>
	<error-page>
		<!-- HTTP 状态码 -->
		<error-code>404</error-code>
		<location>/WEB-INF/404.jsp</location>
	</error-page>
</web-app>